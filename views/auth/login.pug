extends ../layout/index

block contenido
  div.py-10 
     h1.text-4xl.my-10.font-extrabold.text-center.text-cyan-300  Bienes
        span.font-normal Raices
     h2.text-center.text-2xl.font-extrabold.text-sky-400 Login

     .mt-8.mx-auto.max-w-md
        .bg-white.py-8.px-4.shadow
           form
              div 
                label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="email") Correo Electónico
                input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email @.com" type="email" name="email")
              div 
                label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="password") Password
                input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Mínimo 8 carácteres" type="password" name="password")

              .flex.items-center.justify-between 
                a.text-gray-500-text-xs(href="/auth/createAccount" class="hover:underline hover:decoration-2 hover:decoration-red-600") ¿Aun no tienes cuenta? Registrate 
                a.text-gray-500-text-xs(href="/auth/passwordRecovery" class="hover:underline decoration-2 hover:decoration-red-600") Olvide mi Contraseña...
              input(class="w-full bg-indigo-300 hover:bg-red-300 text-white font-bold py-3 cursor-pointer" type="submit" value="Inicia Sesión")













              