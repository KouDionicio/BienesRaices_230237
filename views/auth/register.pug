extends ../layout/index

block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center.text-cyan-300  Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold.text-sky-400= page
        if errores 
            div(class="mx-w-md mx-auto my-10")
                each error in errores 
                    p.bg-rosa.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rouded-lg.max-w-md.mx-auto= error.msg        
    .mt-8.mx-auto.max-w-md
        .bg-white.py-8.px-4.shadow.rounded-lg
            form(method='POST' action='/auth/createAccount' noValidate).space-y-5.px-6
                input(type="hidden" name="_csrf" value=csrfToken)
                div 
                    label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="nombre") Tu Nombre
                    input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre: '')
                div 
                    label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="email") Email de Registro
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email @.com" type="email" name="email" value= usuario ? usuario.email: '')
                div 
                    label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="password") Password
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Mínimo 8 carácteres" type="password" name="password")
                div 
                    label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="password-confirm") Confirme Password
                    input#password-confirm.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Mínimo 8 carácteres, igual que la anterior" type="password" name="password2")
                div
                    label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="fecha") Ingrese su Fecha
                    input#fecha.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="DD/MM/AAAA" type="fecha" name="fecha")
                .flex.items-center.justify-between 
                    a.text-gray-500-text-xs(href="/auth/login" class="hover:underline hover:decoration-2 hover:decoration-red-600") ¿Ya tienes Cuenta? Inicia Sesión 
                    a.text-gray-500-text-xs(href="/auth/passwordRecovery" class="hover:underline decoration-2 hover:decoration-red-600") Olvide mi Contraseña...
                input(class="w-full bg-morado hover:bg-rosa text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")
